---
import { getCollection } from 'astro:content';
import BlogCard from '../../components/BlogCard.astro';
import Layout from '../../layouts/Layout.astro';

const posts = await getCollection('blog');
---

<Layout title="Blog | Dommies" description="Descubre los mejores consejos sobre roomies en Lima.">
    <h1 class="text-3xl font-bold text-center my-6">Blog de Dommies</h1>

    <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 px-14">
        {posts.map((post) => (
            <BlogCard post={post} />
        ))}
    </section>
</Layout>
